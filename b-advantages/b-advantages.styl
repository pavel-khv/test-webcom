.advantages
  &__wrap
    width 100%
    padding 60px 0

  &__content
    margin 0 auto 
    text-align center

  &__separator_wrap
    display inline-block 
    margin 20px 0

.excellences
  width 1420px
  margin 50px auto 0
  display flex
  flex-wrap wrap 
  justify-content space-around
  &__block
    width 290px
    text-align center
    margin-bottom 60px
  &__icon
    margin 0 auto
  &__name
    display inline-block
    margin 30px 0 15px
    font-size main-size
    letter-spacing 2px
    font-weight 700
    color bg-color
  &__text
    font-size main-size
    line-height main-size + 14

#advantages
  scrollTop()

@media screen and (max-width:1600px)
  .excellences
    width 1170px
    &__block
      width 250px
    &__name
      margin 30px 0 15px
      font-size main-size - 1
      letter-spacing 2px
    &__text
      font-size main-size - 2
      line-height main-size + 10
  #advantages
    &:before
      height 80px
      margin-top -80px

@media screen and (max-width:1280px)
  .excellences
    width 740px
    &__block
      width 180px
    &__name
      font-size main-size - 2
    &__text
      font-size main-size - 3
      line-height main-size + 10

@media screen and (max-width:768px)
  .advantages
    &__wrap
      padding 40px 0 20px
  .excellences
    width 95%
    &__block
      width 45%
  #advantages
    &:before
      height 60px
      margin-top -60px