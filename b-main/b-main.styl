.slider
  height 100%
  &__wrap
    width 100%
    height 100%
    &:after
      underline()
      z-index 20

  &__slide
    position relative
    background url('b-main/b-main/bg-slider.png') no-repeat
    background-size cover
    padding 50px 0
    display flex
    align-items center
    flex-direction column
    justify-content center
    flex-wrap wrap
    text-align center
    color bg-color
  .swiper-slide
    height calc(100% - 120px)
    margin-top 115px
  &__content
    max-width 820px
  &__separator
    display inline-block
    position relative
    width 100%
    margin 50px auto
    background bg-color
    &-center
      display inline-block
      position absolute
      left 50%
      top 0
      transform translate(-50%, -50%) rotate(-45deg)
      width 12px
      height 12px
      background bg-color
    &:before
      separator()
      left 0
    &:after
      separator()
      right 0

  
  &__title
    font-size main-size + 32
    letter-spacing main-size + 3

  &__text
    display inline-block
    max-width 780px
    font-size main-size + 8
    letter-spacing 1px

  &__button
    display block
    background hl-color
    border none
    border-radius 10px
    font-size main-size + 16
    letter-spacing 4px
    font-weight 700
    color #fff 
    padding 25px 40px
    margin 40px 0
    cursor pointer
    transition 0.3s
    &:hover
      background lighten(hl-color, 10%)

  &__next-block
    position absolute
    z-index 20
    left 50%
    bottom 3%
    transform translateX(-50%)
    width 54px
    height 54px
    border none
    border-radius 50%
    background url('b-main/b-main/icon_arrow.svg') no-repeat center
    background-color  rgba(40, 54, 61, 0.6)
    transition 0.3s
    outline 0
    cursor pointer
    &:hover
      background-color  rgba(40, 54, 61, 0.7)

  

  .swiper-container
    width 100%
    height 100%
  .swiper-button-next,
  .swiper-button-prev
    background none
  .swiper-button-prev
    left 17%
    width 46px
    height 80px
    background url('b-main/b-main/prev_arrow.png')
    background-size cover
  .swiper-button-next
    right 17%
    width 46px
    height 80px
    background url('b-main/b-main/next_arrow.png')
    background-size cover
  
  .swiper-pagination
    bottom 15%
    &-bullet
      dots()
      background bg-color
      opacity 1
      &:hover,
      &-active
        background hl-color
  

.dot
  dots()
  background bg-color
  &:hover
    background hl-color
.scrollbar__dot
  background rgba(40, 54, 61, 0.4)

.dot_active
  background hl-color


.modal
  position fixed
  z-index 100
  left 0
  top 0
  width 100%
  height 100%
  display none
  &__overlay
    position absolute
    z-index 99
    left 0
    top 0
    width 100%
    height 100%
    background rgba(#000, 0.6)
  &__window
    position relative
    z-index 101
    left 50%
    top 50%
    transform translate(-50%, -50%)
    width 300px
    height 200px
    border-radius 10px
    background #fff
  &__x
    position absolute
    top 10px
    right 10px
    font-size main-size + 2
    font-weight 700
    transform scaleY(0.8)
    cursor pointer
  



@media screen and (-ms-high-contrast: active), (-ms-high-contrast: none) 
    .slider
      &__title
        letter-spacing main-size - 1
      &__button
        letter-spacing 2px

@media screen and (max-width:1600px)
	.slider
    &__wrap
      height 100%
    .swiper-slide
      height calc(100% - 80px)
      margin-top 75px
    &__content
      max-width 700px
    &__separator
      margin 20px auto
      &-center
        width 10px
        height 10px

    &__title
      font-size main-size + 24
      letter-spacing main-size

    &__text
      max-width 720px
      font-size main-size + 2

    &__button
      font-size main-size + 6
      letter-spacing 3px
      padding 20px 25px

    &__next-block
      width 44px
      height 44px

    
    .swiper-button-prev
      left 10%
    .swiper-button-next
      right 10%
@media screen and (max-width:1280px)
	.slider
    &__slide
      padding 30px 0
    &__content
      max-width 600px

    &__title
      font-size main-size + 18
      letter-spacing main-size - 4

    &__text
      max-width 620px
      font-size main-size

    &__button
      font-size main-size + 2

    .swiper-button-prev,
    .swiper-button-next
      width 25px
      height 43px
    .swiper-button-prev
      left 8%
    .swiper-button-next
      right 8%

    .dot,
    .swiper-pagination-bullet
        width 12px
        height 12px

@media screen and (max-width:768px)
	.slider
    &__slide
      padding 10% 0
    &__content
      max-width 600px
    .swiper-slide
      height calc(100% - 60px)
      margin-top 55px
    &__title
      font-size main-size + 8
      letter-spacing main-size - 8
    &__separator
      width 75%
    &__text
      max-width 75%
      font-size main-size - 2

    &__button
      font-size main-size - 2
    .swiper-button-prev
      left 5%
    .swiper-button-next
      right 5%

@media screen and (max-height: 455px) 
  .slider
    &__slide
      padding 10px 0
    &__next-block
      display none
    &__button
      padding 15px
      margin 15px 0 0
  .swiper-pagination
    display none


  