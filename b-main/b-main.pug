mixin scrollbarDots(...items)
  each item in items
    a(href="#"+item).dot.scrollbar__dot.dot_nav

mixin slideInfo(...items)
  each item in items
    .slider__slide.swiper-slide
      .slider__content
        //- заголовок
        h1.slider__title= item[0]
        .slider__separator
          span.slider__separator-center
        //- текст слайда
        p.slider__text= item[1] 
      button.slider__button.open__modal ОФОРМИТЬ ЗАЯВКУ

section.slider
  .slider__wrap.swiper-container
    .swiper-wrapper
      +slideInfo(
        ['ГЛАВНЫЙ ЗАГОЛОВОК', 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatibus odio maxime fuga accusantium optio ducimus porro veritatis nisi?'],
        ['ВТОРОЙ ЗАГОЛОВОК', 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime fuga accusantium optio ducimus porro veritatis nisi?'],
        ['ТРЕТИЙ ЗАГОЛОВОК', 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatibus odio maxime fuga accusantium optio ducimus porro veritatis nisi?']
      ) 

    .swiper-pagination
    .swiper-button-prev
    .swiper-button-next

  // скролл к следующему блоку
  a(href="#portfolio").nextBlock
    .slider__next-block

// фиксированный скроллбар справа
.scrollbar
  +scrollbarDots('main', 'portfolio', 'advantages', 'reviews')
  
// кнопка наверх
a(href="#main").scrollStart
  .btnUp.showBtn


// модальное окно для кнопки "оформить заявку"
.modal
  .modal__overlay.modal__overlay_hide
  .modal__window
    span.modal__x.modal__x_hide X
    