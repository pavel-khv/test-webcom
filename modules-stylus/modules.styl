@font-face
   font-family MyriadPro
   font-style normal
   src url(fonts/MyriadPro/MyriadPro-Regular.otf)
   
bg-color = #28363d
hl-color = #ff8207
text-color = #8198a0
bg-active-color = #1e292f

main-family = MyriadPro , sans-serif, Arial Unicode MS
main-size = 16px

//нижняя полоса в ссылках и блоке слайдера
underline()
   content ''
   position absolute
   bottom 0
   left 0
   width 100%
   height 5px
   background hl-color
   transition 0.3s

//активная ссылка в хедере
active-link()
   background bg-active-color
   color rgba(#fff, 0.5)
   &:before
      underline()

//разделитель в слайдере
separator()
   content ''
   position absolute
   top 50%
   transform translateY(-50%)
   height 3px
   width 48%
   background bg-color
//заголовки в блоке с контактами
feedbackTitle()
   font-size main-size + 8
   line-height main-size + 8
   margin-bottom 15px
   font-weight 700
//точки навигации и слайдера   
dots()
   display inline-block
   width 18px
   height 18px
   border-radius 50%
   margin 6px
   transition 0.3s
   cursor pointer
//отступ, чтобы фиксированная шапка не залазила на блок при скролле
scrollTop()
   &:before
      content ""
      display block
      height 120px
      margin-top -120px
      visibility hidden

body,html 
   width 100%
   height 100%
*
   font-family main-family
   box-sizing border-box
ul 
	list-style none 
a  
	text-decoration none

.title
   font-size main-size + 32
   color bg-color
   letter-spacing 10px
   font-weight 400
.text
   font-size main-size + 2
   line-height main-size + 20
   max-width 780px
   margin 0 auto
   color text-color 
.separator-wavy
   &:before
      content url('b-portfolio/b-portfolio/separator_icon.png')

.scrollbar
   position fixed
   z-index 20
   right 20px
   top 50%
   transform translateY(-50%)
   display flex
   flex-direction column
   &__dot
      background #000

.btnUp
   position fixed
   z-index 20
   background url('b-main/b-main/up.png') no-repeat
   background-position center
   bottom 40px
   right 200px
   display inline-block
   border 3px solid hl-color
   border-radius 10px
   width 54px
   height 54px
   cursor pointer
   transition 0.3s
   display none
   .showBtn
      display block

   

@media screen and (max-width:1600px)
	.title
      font-size main-size + 24
      letter-spacing 8px
   .text
      font-size main-size 
      line-height main-size + 20
      max-width 720px
   .scrollbar
      right 15px
   .btnUp
      right 100px

@media screen and (max-width:1280px)
	.title
      font-size main-size + 18
      letter-spacing 4px
   .text
      font-size main-size - 2
      line-height main-size + 14
      max-width 720px
   .logo
      width 110px

@media screen and (max-width:768px)
	.title
      font-size main-size + 10
      letter-spacing 3px
   .text
      font-size main-size - 2
      line-height main-size + 8
      width 90%
   .scrollbar
      display none
   .logo
      width 110px
   .btnUp
      right 20px