.portfolio
  &__wrap
    position relative
    width 100%
    padding 60px 0
    background url('b-portfolio/b-portfolio/bg-portfolio.png') no-repeat
    background-size cover
    &:before
      content ''
      position absolute
      left 0
      top 0
      height 100%
      width 100%
      background-color rgba(#fff, 0.7)

  &__content
    position relative
    margin 0 auto 
    text-align center

  &__separator_wrap
    display inline-block 
    margin 20px 0

.works
  width 1420px
  margin 50px auto 0
  display flex
  flex-wrap wrap 
  justify-content space-between

  &__box
    position relative
    width 460px
    height 320px
    margin-bottom 20px
    background url('b-portfolio/b-portfolio/icon-portfolio.png') no-repeat center
    background-color bg-color 
    overflow hidden
    cursor pointer
    &_hover-slide
      position absolute
      left 0
      bottom -100px
      width 100%
      padding 10px
      background rgba(#fff, 0.8)
      transition 0.3s
    
    &:hover &_hover-slide
      bottom 0
  
  &__name
    font-size main-size + 2
    line-height main-size + 20
    font-weight 700
    color bg-color
  &__description
    font-size main-size
    line-height main-size + 20
    font-weight 400
    color #7b7b7b

#portfolio
  scrollTop()


@media screen and (max-width:1600px)
	.portfolio
    &__separator_wrap
      margin 10px 0

  .works
    width 1170px
    margin 50px auto 0

    &__box
      width 380px
      height 265px
      margin-bottom 15px
      &_hover-slide
        left 0
        bottom -100px
        width 100%
        padding 10px
    
    &__name
      font-size main-size - 2
      line-height main-size + 18
    &__description
      font-size main-size - 4
      line-height main-size + 12
  #portfolio
    &:before
      height 80px
      margin-top -80px

@media screen and (max-width:1280px)
  .works
    width 740px
    margin 30px auto 0

    &__box
      width 360px
      height 240px
      margin-bottom 10px
    
    &__name
      font-size main-size - 4
      line-height main-size + 8
    &__description
      font-size main-size - 6
      line-height main-size + 4
@media screen and (max-width:768px)
  .works
    width 420px

    &__box
      width 100%
      height 360px
      &_hover-slide
        bottom 0
  #portfolio
    &:before
      height 60px
      margin-top -60px

@media screen and (max-width:480px)
  .works
    width 95%

    &__box
      width 100%
      height 320px
      